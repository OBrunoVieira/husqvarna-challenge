<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Base.TextView" parent="android:Widget.TextView">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="Base.Centered.TextView" parent="Base.TextView">
        <item name="android:gravity">center</item>
    </style>

    <style name="Base.Centered.Bold.TextView" parent="Base.Bold.TextView">
        <item name="android:gravity">center</item>
    </style>

    <style name="Base.Bold.TextView" parent="Base.TextView">
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <!--  ErrorView  -->
    <style name="ErrorView.TextView.Title" parent="Base.Bold.TextView">
        <item name="android:textSize">@dimen/text_size_twenty_four</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">@dimen/spacing_twenty_four</item>
    </style>

    <style name="ErrorView.TextView.Description" parent="Base.TextView">
        <item name="android:textSize">@dimen/text_size_eighteen</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginTop">@dimen/spacing_twenty_four</item>
    </style>

    <style name="ErrorView.Button" parent="Base.Bold.TextView">
        <item name="android:textSize">@dimen/text_size_eighteen</item>
        <item name="android:text">@string/error_try_again</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_marginTop">@dimen/spacing_forty</item>
        <item name="android:paddingTop">@dimen/spacing_eight</item>
        <item name="android:paddingBottom">@dimen/spacing_eight</item>
        <item name="android:paddingStart">@dimen/spacing_thirty_two</item>
        <item name="android:paddingEnd">@dimen/spacing_thirty_two</item>
        <item name="android:background">@drawable/shape_outline_rectangle</item>
    </style>
</resources>